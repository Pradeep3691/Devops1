pipeline { 
    agent any 

    stages {
        stage('Prepare') { 
            steps { 
                git url: 'git@github.com:keshavkummari/devops.git', branch: 'master'
                mvnHome = tool 'maven'
             }
            }
        }
        
    stages {
        stage('Compile') { 
            steps { 
                withMaven(maven : 'maven'){
                    sh 'mvn clean compile'
                } 
            }
        }
        stage('Test'){
            steps {
                withMaven(maven : 'maven'){
                    sh 'mvn test' 
                }
            }
        }
        stage('Deploy') {
            steps {
                withMaven(maven : 'maven'){
                    sh 'mvn deploy'
                }
            }
        }
    }
}
