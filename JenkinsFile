pipeline { 
    agent any 
    
    stages {
        stage('Compile the Source Code') { 
            steps { 
                withMaven(maven : 'maven'){
                    sh 'mvn clean compile'
                } 
            }
        }
    }
    stages {
        stage('Test the Source Code') { 
            steps { 
                withMaven(maven : 'maven'){
                    sh 'mvn clean test'
                } 
            }
        }
     }
    stages { 
        stage('Package the Source Code'){
            steps {
                withMaven(maven : 'maven'){
                    sh 'mvn clean package' 
                }
            }
        }
    }
}
